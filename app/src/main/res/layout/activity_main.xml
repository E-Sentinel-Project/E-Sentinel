<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:padding="16dp">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
<!--                <TextView-->
<!--                    android:id="@+id/textView"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginBottom="24dp"-->
<!--                    android:text="@string/sos_emergency_app"-->
<!--                    android:textAlignment="center"-->
<!--                    android:textSize="22sp"-->
<!--                    android:textStyle="bold" />-->

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnMaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medical_emergency" />

                    <Button
                        android:id="@+id/btnNews"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/get_latest_news" />
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnWeather"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/get_local_weather" />

                    <Button
                        android:id="@+id/btnGemini"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/ask_gemini_ai" />
                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnRoads"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/optimal_route" />

                    <Button
                        android:id="@+id/btnSOS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/send_sos" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnSpeechDet"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/speech_detection" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/speechSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_model"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/model_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ToggleButton
                        android:id="@+id/toggle_mic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textOff="@string/start_detection"
                        android:textOn="@string/stop_detection"
                        android:layout_marginTop="12dp"/>

                    <ToggleButton
                        android:id="@+id/pause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textOff="@string/pause"
                        android:textOn="@string/resume"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/label_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/waiting"
                        android:padding="8dp"
                        android:background="#CCCCFF"
                        android:textColor="#000000"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/label_partial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/partial_result"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/partial_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/partial_placeholder"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:padding="8dp"
                        android:background="#EEEEEE"
                        android:textColor="#000000"
                        android:scrollbars="vertical"/>

                    <TextView
                        android:id="@+id/label_final"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/final_result"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/final_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/final_placeholder"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:padding="8dp"
                        android:background="#DDFFDD"
                        android:textColor="#000000"
                        android:scrollbars="vertical"
                        android:overScrollMode="always"
                        android:scrollHorizontally="false"
                        android:ellipsize="none"
                        android:singleLine="false"/>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <ToggleButton
        android:id="@+id/toggle_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/light"
        android:textOn="@string/dark"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"/>
</FrameLayout>
